{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "moduleResolution": "node16",
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true
  },
  "exclude": ["src/index.ts"],
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}